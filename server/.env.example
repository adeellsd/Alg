# ============================================================================
# RENTALG SERVER - ENVIRONMENT VARIABLES
# ============================================================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rentalg?schema=public"

# Server
PORT=3002
NODE_ENV=development

# AWS Cognito Configuration
# Ces valeurs sont nécessaires pour vérifier les tokens JWT
AWS_COGNITO_REGION=eu-west-1
AWS_COGNITO_USER_POOL_ID=your_user_pool_id_here
# Format: https://cognito-idp.{region}.amazonaws.com/{userPoolId}
AWS_COGNITO_ISSUER=https://cognito-idp.eu-west-1.amazonaws.com/your_user_pool_id_here

# AWS S3 (pour uploads)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=rentalg-media
AWS_S3_REGION=eu-west-1

# Frontend URL (pour CORS)
FRONTEND_URL=http://localhost:3000
