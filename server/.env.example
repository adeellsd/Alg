# =============================================================================
# RentAlg - Variables d'Environnement (Server)
# =============================================================================
# Copiez ce fichier vers .env et remplissez les valeurs

# =============================================================================
# DATABASE
# =============================================================================
# URL de connexion PostgreSQL avec PostGIS
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/rentalg_dev"

# =============================================================================
# AWS COGNITO
# =============================================================================
# Configuration AWS Cognito pour l'authentification
AWS_COGNITO_REGION="eu-west-3"
AWS_COGNITO_USER_POOL_ID="eu-west-3_XXXXXXXXX"
AWS_COGNITO_ISSUER="https://cognito-idp.eu-west-3.amazonaws.com/eu-west-3_XXXXXXXXX"

# =============================================================================
# AWS S3 (Media Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET_NAME="rentalg-media"
AWS_S3_REGION="eu-west-3"

# =============================================================================
# SERVER
# =============================================================================
PORT=3002
NODE_ENV="development"

# =============================================================================
# PAYMENT (Chargily)
# =============================================================================
CHARGILY_API_KEY=""
CHARGILY_SECRET_KEY=""
CHARGILY_WEBHOOK_SECRET=""
